<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/host_productivity"
        android:layout_marginLeft="@dimen/margin_medium"
        android:textColor="@color/black_real"
        android:textStyle="bold"
        android:textSize="@dimen/text_large"/>

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/propName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="@dimen/margin_medium"
            android:text="@string/property_name"
            android:textColor="@color/black_real"
            android:textStyle="bold"
            android:textSize="@dimen/text_small"/>

        <TextView
            android:id="@+id/propName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_medium"
            android:text="@string/property_name"
            android:textColor="@color/black_real"
            android:textStyle="bold"
            android:textSize="@dimen/text_small"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/top2"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="@dimen/margin_medium"
            android:text="Parisian Macao"
            android:textColor="@color/black_real"
            android:textStyle="normal"
            android:textSize="@dimen/text_small"/>

        <TextView
            android:id="@+id/feedBackCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_large"
            android:text="5"
            android:textColor="@color/black_real"
            android:textStyle="normal"
            android:textSize="@dimen/text_small"/>

        <View
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_below="@+id/feedBackCount"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_width="match_parent"
            android:background="@color/gray_color"
            android:layout_height="0.8dp"/>
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/top3"
        android:layout_below="@+id/top2"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="@dimen/margin_medium"
            android:text="Venitian Macao"
            android:textColor="@color/black_real"
            android:textStyle="normal"
            android:textSize="@dimen/text_small"/>

        <TextView
            android:id="@+id/feedBackCount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_large"
            android:text="1"
            android:textColor="@color/black_real"
            android:textStyle="normal"
            android:textSize="@dimen/text_small"/>

        <View
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_below="@+id/feedBackCount2"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_width="match_parent"
            android:background="@color/gray_color"
            android:layout_height="0.8dp"/>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/top4"
        android:layout_below="@+id/top3"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="@dimen/margin_medium"
            android:text="Sands Macao"
            android:textColor="@color/black_real"
            android:textStyle="normal"
            android:textSize="@dimen/text_small"/>

        <TextView
            android:id="@+id/feedBackCount3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_large"
            android:text="1"
            android:textColor="@color/black_real"
            android:textStyle="normal"
            android:textSize="@dimen/text_small"/>

        <View
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_below="@+id/feedBackCount3"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_width="match_parent"
            android:background="@color/gray_color"
            android:layout_height="0.8dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top4"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_large">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/moveUP"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="@dimen/margin_medium"
                android:src="@mipmap/arrow_up"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/moveUP"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 of 7"
                    android:textColor="@color/black_real"
                    android:textSize="@dimen/text_small"
                    android:textStyle="normal" />
            </LinearLayout>


            <ImageView
                android:id="@+id/moveDown"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_toRightOf="@+id/middle"
                android:src="@mipmap/arrow_down"
                android:visibility="visible" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>